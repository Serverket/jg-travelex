# Frontend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Backend Supabase Configuration (for Express backend)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Backend Server (Express)
PORT=8000
CORS_ORIGIN=http://localhost:5173

# Google Maps API Key
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Backend API Base URL (for local dev, default is http://localhost:8000)
VITE_BACKEND_URL=http://localhost:8000

# Admin user configuration (optional; only for legacy scripts/create-admin.js)
# Not required when using `npm run create-admin` (uses scripts/create-admin-supabase.js)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrator
ADMIN_EMAIL=admin@company.com